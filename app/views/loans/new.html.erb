<div class="mt-12 max-w-4xl mx-auto p-8 bg-white rounded-lg shadow-lg">
  <h1 class="text-3xl font-bold text-pink-600 mb-4">Borrow Book: <%= @book.title %></h1>

  <%= form_with model: [@book, @loan], local: true do |form| %>
    <% if @loan.errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-500 text-red-900 px-4 py-3 rounded mb-4" role="alert">
        <h2 class="font-bold mb-2">
          <%= pluralize(@loan.errors.count, "error") %> prohibited this loan from being saved:
        </h2>
        <ul class="list-disc list-inside">
          <% @loan.errors.full_messages.each do |message| %>
            <li class="text-red-700"><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-4">
      <%= form.label :borrower_name, class: "block text-gray-700 font-bold mb-2" %>
      <%= form.text_field :borrower_name, class: "w-full p-3 border border-gray-300 rounded" %>
    </div>

    <div class="mt-4">
      <%= form.submit "Borrow Book", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 transition-colors" %>
    </div>
  <% end %>

  <p class="mt-6">
    <%= link_to "Back to Book Details", book_path(@book), class: "px-4 py-2 bg-sky-500 text-white rounded hover:bg-sky-600 transition-colors" %>
  </p>
</div>
    <script>
    document.body.classList.add('bg-blue-50');
    </script>
